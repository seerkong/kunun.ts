{
    "compilerOptions": {
        "allowJs": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "noEmit": false,
        "noEmitHelpers": true,
        "importHelpers": true,
        "strictNullChecks": false,
        "allowUnreachableCode": true,
        "module": "commonjs",
        "target": "es2017",
        // "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": true,
        "esModuleInterop": true,
        // "outDir": "app",
        "baseUrl": "./",
        "outDir": "dist",
    },
    "include": [
        "typings/**/*",
        ".",
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
    ]
}