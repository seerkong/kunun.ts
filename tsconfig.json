{
    "compilerOptions": {
        "allowJs": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "noEmit": false,
        "noEmitHelpers": true,
        "importHelpers": true,
        "strictNullChecks": false,
        "allowUnreachableCode": true,
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "ignoreDeprecations": "5.0",
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "target": "esnext",
        // "module": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": ["esnext"],
        
        "outDir": "dist",
        "baseUrl": "./lib",
        "paths": {
        },
    },
    "include": [
        "packages/*/lib/**/*.ts",
        "packages/*/lib/**/*.d.ts",
        "lib/**/*.ts",
        "lib/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "__tests__"
    ]
}